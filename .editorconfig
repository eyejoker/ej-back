# top-most EditorConfig file
root = true

[*.md]
trim_trailing_whitespace = false
indent_style = space
indent_size = 4
end_of_line = lf
charset = utf-8

[*.ts]
trim_trailing_whitespace = true
indent_style = space
indent_size = 2
end_of_line = lf
charset = utf-8
max_line_length = 80

# Unix-style newlines with a newline ending every file
[*]
indent_style = space
indent_size = 2
end_of_line = lf
charset = utf-8
insert_final_newline = true
max_line_length = 80
